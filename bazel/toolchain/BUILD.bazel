    name = "gcc-linux-aarch64-toolchain",
    exec_compatible_with = [
        "@platforms//os:linux",
        "@platforms//cpu:aarch64",
    ],
    target_compatible_with = [
        "@platforms//os:linux",
        "@platforms//cpu:aarch64",
    ],
    toolchain = ":gcc-linux-aarch64",
    toolchain_type = ":toolchain_type",
)

